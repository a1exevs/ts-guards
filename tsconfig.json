{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonJs",
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "linter",
    ".coverage",
    "**/specs/*",
    "**/*.spec.ts",
    "**/*.spec.unit.ts"
  ]
}
